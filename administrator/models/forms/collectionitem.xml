<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_COLLECTIONVIEWS_FORM_LBL_COLLECTIONITEM_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="catid" type="category"
                
            label="COM_COLLECTIONVIEWS_FORM_LBL_COLLECTIONITEM_CATID"
            description="COM_COLLECTIONVIEWS_FORM_DESC_COLLECTIONITEM_CATID" 
                
                
                 required="true" 
            extension="com_collectionviews" /> 

 
		<field name="filter_catid" type="category"
            label="COM_COLLECTIONVIEWS_FORM_LBL_COLLECTIONITEM_CATID"
            description="COM_COLLECTIONVIEWS_FORM_DESC_COLLECTIONITEM_CATID"  extension="com_collectionviews" show_root="1" onchange="this.form.submit();" /> 

       <field name="title" type="text"
                
            label="COM_COLLECTIONVIEWS_FORM_LBL_COLLECTIONITEM_TITLE"
            description="COM_COLLECTIONVIEWS_FORM_DESC_COLLECTIONITEM_TITLE" 
                
                
                 required="true"  /> 

       <field name="image" type="media"
                
            label="COM_COLLECTIONVIEWS_FORM_LBL_COLLECTIONITEM_IMAGE"
            description="COM_COLLECTIONVIEWS_FORM_DESC_COLLECTIONITEM_IMAGE" 
                
                
                 required="true" 
            directory="/images/" /> 

       <field name="file" type="file"
                
            label="COM_COLLECTIONVIEWS_FORM_LBL_COLLECTIONITEM_FILE"
            description="COM_COLLECTIONVIEWS_FORM_DESC_COLLECTIONITEM_FILE" 
                
                
                
            upload_directory="uploaded-files" /> 

       <field name="note" type="editor"
                
            label="COM_COLLECTIONVIEWS_FORM_LBL_COLLECTIONITEM_NOTE"
            description="COM_COLLECTIONVIEWS_FORM_DESC_COLLECTIONITEM_NOTE" 
                
                
                
            cols="50"
            rows="10" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_COLLECTIONVIEWS_FORM_LBL_COLLECTIONITEM_CREATED_BY"
            description="COM_COLLECTIONVIEWS_FORM_DESC_COLLECTIONITEM_CREATED_BY"  /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
