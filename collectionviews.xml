<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_collectionviews</name>
    <creationDate>2014-11-13</creationDate>
    <copyright>Copyright (C) 2014. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Eric Murray</author>
    <authorEmail>eric@altosmarketing.com</authorEmail>
    <authorUrl>http://ericmurray.me</authorUrl>
    <version>1.0.3</version>
    <description>Create collection items and custom views to display those items.</description>
    
    <scriptfile>script.php</scriptfile>
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>collectionviews.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>assets</folder>
    </files>
    <languages folder="site">
        
			<language tag="en-GB">language/en-GB/en-GB.com_collectionviews.ini</language>
    </languages>
    <administration>
        <menu img="components/com_collectionviews/assets/images/s_com_collectionviews.png" >COM_COLLECTIONVIEWS</menu>
        <submenu>
            
			<menu link="option=com_collectionviews&amp;view=collectionitems" view="collectionitems" img="components/com_collectionviews/assets/images/s_collectionitems.png" alt="Collectionviews/Collectionitems">COM_COLLECTIONVIEWS_TITLE_COLLECTIONITEMS</menu>

			<menu link="option=com_categories&amp;extension=com_collectionviews" view="categories" img="components/com_collectionviews/assets/images/s_collectionitems.png" alt="Collectionviews/Categories">COM_COLLECTIONVIEWS_COLLECTIONITEMS_CATID</menu>

			<menu link="option=com_collectionviews&amp;view=arrangements" view="arrangements" img="components/com_collectionviews/assets/images/s_arrangements.png" alt="Collectionviews/Arrangements">COM_COLLECTIONVIEWS_TITLE_ARRANGEMENTS</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>collectionviews.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>language</folder>
        </files>
        <languages folder="administrator">
            
			<language tag="en-GB">language/en-GB/en-GB.com_collectionviews.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_collectionviews.sys.ini</language>
        </languages>
    </administration>
    <plugins>
        <plugin group="search" plugin="collectionviews"/>
    </plugins>
    
</extension>
